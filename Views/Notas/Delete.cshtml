@model Proyecto_Notas.Models.Nota

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro que deseas eliminar esta nota?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nota
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nota1)
        </dd>
        <dt class = "col-sm-2">
            Estudiante
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEstudianteNavigation.Nombre)
            @Html.DisplayFor(model => model.IdEstudianteNavigation.Apellido)
        </dd>
        <dt class = "col-sm-2">
            Materia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMateriaNavigation.NombreMateria)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdNota" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver</a>
    </form>
</div>
