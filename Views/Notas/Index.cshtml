@model IEnumerable<Proyecto_Notas.Models.Nota>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <div class="jumbotron jumbotron-fluid">
  <div class="container">
     <h1 class="display-4">Registro de Notas</h1>
    <p class="lead">Aplicacion de registro para las notas de nuestros estudiantes.</p>
  </div>
</div>
    <hr />

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nota1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstudianteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMateriaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nota1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstudianteNavigation.IdEstudiante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMateriaNavigation.IdMateria)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdNota">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary"  asp-route-id="@item.IdNota">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.IdNota">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>