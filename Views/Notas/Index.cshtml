@model IEnumerable<Proyecto_Notas.Models.Nota>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <div class="jumbotron jumbotron-fluid">
  <div class="container">
     <h1 class="display-4">Registro de Notas</h1>
    <p class="lead">Aplicacion de registro para las notas de nuestros estudiantes.</p>
  </div>
</div>
    <hr />

<p>
    <a class="btn btn-primary" asp-action="Create">Registrar una Nota</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nota Id
            </th>
            <th>
                Nota
            </th>
            <th>
                Nombre del Estudiante
            </th>
            <th>
                Materia
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
            <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdNota)
                    </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Nota1)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.IdEstudianteNavigation.Nombre)
                        @Html.DisplayFor(modelItem => item.IdEstudianteNavigation.Apellido)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.IdMateriaNavigation.NombreMateria)
                </td>
                <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdNota">Editar</a> |
                        <a asp-action="Details" class="btn btn-primary"  asp-route-id="@item.IdNota">Detalles</a> |
                        <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.IdNota">Eliminar</a>
                </td>
            </tr>
            }
    </tbody>
</table>